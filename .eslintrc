{
  "extends": [
    "eslint:recommended"
//    "plugin:jest/recommended"
  ],
  "env": {
    "es6": true,
    "amd": true,
    "jest": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "double"],
    "semi": [2, "always"]
  }
}